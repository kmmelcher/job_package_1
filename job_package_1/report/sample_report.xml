<odoo>
    <data>

        <template id="report_sample_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Report title</h2>
                            <p>this is a sample report.</p>
                            <p>You should be able to convert this PDF(done) and Word format.</p>
                            <p><span t-field="o.contract_body"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="report_sample" model="ir.actions.report">
            <field name="name">Contract</field>
            <field name="model">job.package.freelancer</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">job_package_1.report_sample_view</field>
            <field name="report_file">job_package_1.report_sample</field>
            <field name="binding_model_id" ref="model_job_package_freelancer"/>
            <field name="binding_type">report</field>
            <!-- Save report as attachment -->
            <field name="attachment">'Contract.pdf'</field>
        </record>

        <!-- Add an option in Action dropdown in job.package.freelancer to generate an attachment -->
        <record model="ir.actions.server" id="action_contract_generate">
            <field name="name">Contract Generate</field>
            <field name="model_id" ref="model_job_package_freelancer"/>
            <field name="binding_model_id" ref="model_job_package_freelancer" />
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
              if records:
                  action = records.action_get_attachment()
            </field>
        </record>

    </data>
</odoo>